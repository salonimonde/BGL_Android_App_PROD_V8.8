                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
