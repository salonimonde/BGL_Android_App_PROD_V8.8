                    android:textSize="@dimen/text_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="15"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_large"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="Energy Charges"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="50"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_large"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="Fixed charges"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="200"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_large"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="Arrears"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_large"/>

